<header>
    <div class="header-content">
        <div class="header-content-inner">

          <p class="transbox">Welcome, <%= @user.first_name %></p>

          <hr>

          <% if @user.shop_name == nil %>
            <form class="form-inline">
              <div id="bike-shop" class="form-group transbox search-field">
                <p>Enter a zip and we'll find some shops nearby</p>
                <div>
                  <input type="text" name="location" placeholder="Enter Zip" id="shop-search">
                  <button id="shop-search-btn" class="btn btn-search"> Submit </button>
                </div>
              </div>
            </form>


          <% else %>
            <%= simple_format("Your go to shop for maintenance is #{@user.shop_name}", class: 'transbox') %>
          <% end %>


          <hr>

          <%= gear_track_toggle %>

        </div>
    </div>
</header>
