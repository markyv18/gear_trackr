              <div>
                <input type="text" name="location" placeholder="Enter Zip to find a shop" class="transbox shop-search">
                <button class="btn btn-search shop-search-btn"> Submit </button>
              </div>
            </form>
          </div>


          <%= form_tag('/add-shop', method: :put) do %>
          <input type="text" name="shop-to-add" id="shop-to-add" value="Enter Shop from above" class="form-control">
          <button class="btn btn-search shop-search-btn"> Submit </button>
        <% end %>

